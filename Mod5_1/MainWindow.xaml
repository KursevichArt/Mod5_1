<Window x:Class="Mod5_1.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drawing App" Height="600" Width="800">
    <Grid>
        <ComboBox x:Name="ShapeSelector" Width="120" VerticalAlignment="Top" Margin="10">
            <ComboBoxItem Content="Line"/>
            <ComboBoxItem Content="Circle"/>
            <ComboBoxItem Content="Square"/>
        </ComboBox>
        <Canvas x:Name="DrawingCanvas" Background="White" MouseDown="DrawingCanvas_MouseDown" MouseMove="DrawingCanvas_MouseMove" MouseUp="DrawingCanvas_MouseUp" Margin="0,52,0,0" />
        <TextBlock HorizontalAlignment="Left" Margin="228,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Выберите фигуру:"/></TextBlock>
    </Grid>
</Window>